<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nutritioncalculator.MainController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem fx:id="save" mnemonicParsing="false" onAction="#saveLog" text="Save" />
                        <MenuItem fx:id="load" mnemonicParsing="false" onAction="#returnToStart" text="Load" />
                    <MenuItem mnemonicParsing="false" onAction="#quitProgram" text="Close" />
                  </items>
                </Menu>
                  <Menu fx:id="mode" mnemonicParsing="false" text="Mode">
                    <items>
                      <MenuItem fx:id="view" mnemonicParsing="false" onAction="#toggleViewMode" text="View Log" />
                        <MenuItem fx:id="edit" mnemonicParsing="false" onAction="#toggleEditMode" text="Edit Log" />
                        <MenuItem mnemonicParsing="false" onAction="#toggleIngMode" text="View/Edit Ingredients" />
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="about" mnemonicParsing="false" onAction="#displayAbout" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <center>
            <AnchorPane prefHeight="600.0" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <ListView fx:id="foodView" layoutY="321.0" prefHeight="77.0" prefWidth="475.0" visible="false" />
                  <Button fx:id="loadButton" layoutX="182.0" layoutY="321.0" mnemonicParsing="false" onAction="#loadUser" prefHeight="31.0" prefWidth="137.0" text="Load" AnchorPane.leftAnchor="182.0" AnchorPane.rightAnchor="181.0" />
                  <TextFlow fx:id="mainText" prefHeight="321.0" prefWidth="500.0" style="-fx-padding: 10px;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                  <Button fx:id="addMealB" layoutX="70.0" layoutY="516.0" mnemonicParsing="false" onAction="#newMeal" prefHeight="38.0" prefWidth="107.0" text="Add Meal" AnchorPane.bottomAnchor="10.0" />
                  <ListView fx:id="mealList" layoutX="1.0" layoutY="396.0" prefHeight="100.0" prefWidth="500.0" AnchorPane.bottomAnchor="72.0" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="0.0" />
                  <Button fx:id="editMealB" layoutX="185.0" layoutY="516.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="107.0" text="Edit Meal" AnchorPane.bottomAnchor="10.0" />
                  <Button fx:id="deleteMealB" layoutX="299.0" layoutY="516.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="107.0" text="Delete Meal" AnchorPane.bottomAnchor="10.0" />
               </children>
            </AnchorPane>
         </center>
         <left>
            <AnchorPane maxWidth="150.0" minWidth="100.0" prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER">
               <children>
                  <ListView fx:id="days" layoutX="-1.0" layoutY="-1.0" onMouseClicked="#selectDay" prefHeight="570.0" prefWidth="150.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
         </left>
         <right>
            <AnchorPane maxWidth="200.0" minWidth="175.0" prefHeight="568.0" prefWidth="175.0" BorderPane.alignment="CENTER">
               <children>
                  <ListView fx:id="foodsList" prefHeight="537.0" prefWidth="175.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                  <Button fx:id="toggleFoodB" layoutY="527.0" mnemonicParsing="false" onAction="#toggleFoodList" prefHeight="30.0" prefWidth="175.0" text="Toggle" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
               </children>
            </AnchorPane>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
