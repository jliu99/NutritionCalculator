<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nutritioncalculator.MainController">
   <children>
      <BorderPane fx:id="pane" layoutX="-6.0" layoutY="-6.0" prefHeight="413.0" prefWidth="611.0">
         <top>
            <MenuBar fx:id="menu" BorderPane.alignment="CENTER">
              <menus>
                <Menu fx:id="file" mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem fx:id="load" mnemonicParsing="false" onAction="#loadLog" text="Load" />
                        <MenuItem fx:id="save" mnemonicParsing="false" onAction="#saveLog" text="Save" />
                    <MenuItem fx:id="close" mnemonicParsing="false" onAction="#quitProgram" text="Close" />
                  </items>
                </Menu>
                <Menu fx:id="edit" mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu fx:id="help" mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="about" mnemonicParsing="false" onAction="#displayAbout" text="About" />
                        <MenuItem fx:id="faq" mnemonicParsing="false" onAction="#displayFAQ" text="FAQ" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
         <center>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField layoutX="44.0" layoutY="31.0" prefHeight="94.0" prefWidth="262.0" text="Welcome to the Nutrition Calculator!" />
                  <TextArea layoutX="45.0" layoutY="153.0" prefHeight="54.0" prefWidth="261.0" text="Are you a new user?&#10;Make a new log:" />
                  <TextArea layoutX="44.0" layoutY="267.0" prefHeight="62.0" prefWidth="255.0" text="Returning user?&#10;Open logs:&#10;" />
                  <Button fx:id="NewLog" layoutX="410.0" layoutY="163.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="134.0" text="New Log" />
                  <ChoiceBox layoutX="402.0" layoutY="280.0" prefHeight="31.0" prefWidth="150.0">
                     <effect>
                        <Reflection />
                     </effect>
                  </ChoiceBox>
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
